<div class="storycreate pure-form ">
  <h2>Tell us about your story!</h2>
  <fieldset>
      <%= form_for @story,html: {multipart: true},  class:"pure-u-5-6" do |f| %>
      <div class='pure-u-5-6'>
      <%= f.text_field :title, placeholder: "Title", data: {field: "title"} %><br>
      <%= f.text_field :author, placeholder: "Author",  data: {field: "author"} %><br>
      <%= render partial: 'course_dropdown', :locals => {:courses => @courses } %><br>
      <%= f.label :text_file, "Upload a story (.txt only)" %><br>
      <%= f.file_field :text_file %><br>
      <p>Or paste your story here:</p>
  </div>
      <textarea placeholder="Paste your story here" class="new_story_body pure-u-5-6" name="story_body" rows="50" >
      </textarea>
      <br><br><br>
      <%= f.label :file, "Upload an image to go with your story!" %>
      <br>
      <br>
      <div class="pure-u-5-6"> 
        <%= f.file_field :file%>
    </div>
    <br>
    <%= f.label :remote_file_url, "or use an image URL" %>
    <br>
    <div class="pure-u-5-6"> 
        <%= f.text_field :remote_file_url,  class:"pure-u-5-6" %>
    </div>
    <br>
    <br>
    <%= button_tag(type: "submit", :class => "pure-button pure-button-primary") {content_tag(:strong, "Post!" )}%>
    <% end %>
</fieldset>
</div>
